# AWS Configuration
# eu-north-1 (Stockholm) - closest to Finland
aws_region = "eu-north-1"

# Environment
environment = "prod"

# AWS Config
config_recorder_name = "encryption-baseline-recorder"

# Service Control Policies (requires AWS Organizations)
enable_scps = false

# Automatic Remediation
remediation_enabled = false

# Security Alerts (EventBridge â†’ SNS integration)
# Set this to the ARN of your security alerts SNS topic from deployments/aws/management/sns-notifications/
# Example: "arn:aws:sns:us-east-1:123456789012:security-compliance-alerts"
# Leave empty ("") to disable EventBridge alerts
security_sns_topic_arn = ""
