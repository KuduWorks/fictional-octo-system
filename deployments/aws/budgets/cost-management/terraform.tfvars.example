# ============================================================
# AWS Budget Configuration
# ============================================================
# Copy this file to terraform.tfvars and customize for your needs

# AWS Region (must be us-east-1 for budgets and billing)
aws_region = "us-east-1"

# Environment name
environment = "prod"

# ============================================================
# Budget Limits (in USD)
# ============================================================

# Monthly total budget
monthly_budget_limit = "100"

# Quarterly budget (optional)
quarterly_budget_limit = "300"
enable_quarterly_budget = false

# ============================================================
# Service-Specific Budgets (Optional)
# ============================================================

enable_service_budgets = false
ec2_budget_limit = "50"
s3_budget_limit = "20"

# ============================================================
# Alert Configuration
# ============================================================

# Email addresses to receive alerts (you'll need to confirm subscriptions)
alert_email_addresses = [
  "admin@example.com",
  # "finance@example.com",
]

# Alert thresholds (percentage of budget)
alert_threshold_actual_80 = 80        # Alert at 80% actual spend
alert_threshold_actual_100 = 100      # Alert at 100% actual spend
alert_threshold_forecasted_100 = 100  # Alert at 100% forecasted spend

# Budget start date (YYYY-MM-DD format)
# Leave empty to start from current month
budget_start_date = "2025-01-01"

# ============================================================
# Tag-Based Budgets (Optional)
# ============================================================

# Track budgets by specific tags (e.g., per project or team)
tag_based_budgets = {
  # Example: Budget for production environment
  # "production" = {
  #   tag_key   = "Environment"
  #   tag_value = "prod"
  #   limit     = "150"
  # }
  # Example: Budget for specific project
  # "project-alpha" = {
  #   tag_key   = "Project"
  #   tag_value = "alpha"
  #   limit     = "75"
  # }
}

# ============================================================
# CloudWatch Billing Alarm (Optional)
# ============================================================

# Additional billing alarm in CloudWatch
enable_cloudwatch_billing_alarm = false
cloudwatch_billing_threshold = 100
